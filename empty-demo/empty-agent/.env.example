# Microsoft 365 Agent SDK connection settings
# These are required for Azure Bot Service authentication

# Service Connection (Bot identity)
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__CLIENTID=your-agent-app-id
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__CLIENTSECRET=your-agent-client-secret
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__TENANTID=your-tenant-id

# GRAPH Auth Handler Connection (for OBO exchange to Graph API)
CONNECTIONS__GRAPH__SETTINGS__CLIENTID=your-agent-app-id
CONNECTIONS__GRAPH__SETTINGS__CLIENTSECRET=your-agent-client-secret
CONNECTIONS__GRAPH__SETTINGS__TENANTID=your-tenant-id

# Auth Handler Settings - Links handlers to Azure Bot OAuth connections
AGENTAPPLICATION__USERAUTHORIZATION__HANDLERS__GRAPH__SETTINGS__AZUREBOTOAUTHCONNECTIONNAME=graph
AGENTAPPLICATION__USERAUTHORIZATION__HANDLERS__GRAPH__SETTINGS__OBOCONNECTIONNAME=GRAPH

# Empty API Settings
EMPTY_API_URL=http://localhost:8000
EMPTY_API_SCOPE=api://your-api-client-id/access_as_user
